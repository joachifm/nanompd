name: mpd
version: 0.0.0.0
synopsis:
  A library for scripting client interactions with MPD,
  the Music Player Daemon.

build-type: Simple
cabal-version: >= 1.10

library
  default-language: Haskell2010
  hs-source-dirs: src

  build-depends:
      base
    , bytestring
    , deepseq
    , network
    , text
    , unordered-containers

  exposed-modules:
      MPD
    , MPD.Core
    , MPD.Commands
    , MPD.Util

  other-modules:
